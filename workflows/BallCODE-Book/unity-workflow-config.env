# Unity AI Automation Workflow Configuration
# Copy this file and fill in your values
# Then source it: source unity-workflow-config.env

# GitHub Configuration
export GITHUB_REPO_OWNER="rashadwest"
export GITHUB_REPO_NAME="BallCode"
export GITHUB_WORKFLOW_FILE="unity-webgl-build.yml"
export UNITY_REPO_URL="https://github.com/rashadwest/BallCode.git"

# Unity Project Paths
export UNITY_PROJECT_PATH="/home/pi/Projects/BTEBallCODE"
export BUILD_OUTPUT_PATH="/home/pi/Builds/WebGL"
export WORKFLOW_PATH="/home/pi/workflows/BallCODE-Book"

# Netlify Configuration
export NETLIFY_SITE_NAME="ballcode-game"
export NETLIFY_SITE_ID="your-netlify-site-id"
export NETLIFY_AUTH_TOKEN="your-netlify-auth-token"

# OpenAI Configuration (for AI analysis)
export OPENAI_API_KEY="your-openai-api-key"

# Notification Webhook (optional)
export WEBHOOK_NOTIFICATION_URL=""

# GitHub Actions Token (for triggering builds)
export GITHUB_ACTIONS_TOKEN="your-github-personal-access-token"

# Unity Executable Path (if using local builds)
export UNITY_EXECUTABLE="/opt/unity/Editor/Unity"

# Schedule Configuration (cron format)
export SCHEDULE_HOURS=6  # Run every 6 hours






